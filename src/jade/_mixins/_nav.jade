      .c-wechat__img
        img(src="./assets/img/wechat-01.png" alt)
        .c-wechat__img--text
          p 1
      .c-wechat__img
        img(src="./assets/img/wechat-02.png" alt)
        .c-wechat__img--text
          p 2


