/***
 * Backgrounds: `.bg` - Look through src/global/_bg.styl for more styles.
 */
 
 /**
 * Text alignment:
 * `.bg--` - transparent|primary-blue|secondary-blue|white
 *
 *     @example
 *     p.bg--primary-blue.text--white Primary blue bg
 *     p.bg--white.text--primary-blue White bg
 *     p.bg--secondary-blue.text--white Secondary blue bg
 */
   

.bg--transparent 
  background-color transparent !important
  
.bg--white
  background-color white !important

.bg--black-white
  background linear-gradient(top, rgb(153, 153, 153) 0%, rgb(255,255,255) 40%)
.bg--white-black
  background linear-gradient(top, rgb(255,255,255) 66%, rgb(153, 153, 153) 100%)
.bg--shadow
  background-color rgba(0, 0, 0, 0.3)
  z-index 1
  width 100%
  height 100%
  position absolute
  top 0
  left 0
.bg--shadow__text
  z-index 2
  width 100%
  height 100%
  position absolute
  top 0
  left 0

html.ie8,
html.ie9
  .bg--black-white
    background #ccc
  .bg--white-black
    background #ccc

@media $small
  .bg--shadow
    display none