.c-wechat
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  background-color rgba(0,0,0,.7)
  z-index 400
  &.is-active
    display block
  &__desktop
    display block
    position absolute
    top 380px
    left 125px
    width 230px
    background-color $col-gold
    padding-bottom 20px
    .top-line
      hr
        margin 20px auto
        width 20px
        border 1px solid black
    p
      text-align center
      color black
      line-height 1.5em
      margin-bottom 0
  &__mobile
    display none
    position absolute
    width 200px
    top 50%
    left 50%
    margin-left -100px
    z-index 400
    margin-top -225px
  &__qr
    padding 35px 45px 0
    img
      width 100%
      display block
  &__img
    position relative
    &:first-child
      margin-bottom 50px
    img
      width 100%
      display block
    &--text
      position absolute
      width 40px
      background-color black
      top -30px
      left 10px
      p
        text-align center
        font-size 50px
        color white
        line-height 1.1em
        font-family $font-kh-68
        margin-bottom 0
      

@media $small
  .c-wechat
    &__desktop
      display none
    &__mobile
      display block