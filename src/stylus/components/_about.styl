.c-about
  clearfix()
  padding 70px 0 170px
  max-width 1024px
  position relative
  margin 0 auto
  &__text
    width 42%
    text-align left
    margin-left 8%
    float left
    .top-line
      clearfix()
      hr
        margin-top 0
        margin-bottom 0
        float left
        width 25px
        border 1px solid $col-gold
    h2
      color black
      margin-top 0
      margin-bottom 0
      font-family $font-kh-68
      font-size 88px
      line-height .8em
      padding 15px 0
      text-transform uppercase
    p
      color black
      font-family $font-bc
      margin-top 15px
      font-style italic
      text-transform uppercase
      font-size 16px
  &__fl-img
    position absolute
    bottom 10%
    width 40%
    right 5%
    img
      width 100%
      display block
  &__fl-text
    width calc(40% - 60px)
    position absolute
    left 50%
    top 75%
    color white
    background-color black
    padding 30px
    .top-line
      clearfix()
      hr
        width 50px
        border 1px solid $col-gold
        margin 0 auto 20px
    p
      text-align left
      line-height 2em
  &.active
    .c-about__fl-img
      bottom 55%
      transition all 1s 
    .c-about__fl-text
      top 40%
      transition all 1s 
      transition-delay .5s
      
@media $medium
  .c-about
    &__text
      width 36%
      h2
        font-size 72px
    &__fl-img
      width 50%
    &__fl-text
      width calc(50% - 60px)
      left 40%
@media $small
  .c-about
    padding 70px 0 35px
    &__text
      width calc(100% - 40px)
      margin-left 0
      float none
      text-align center
      padding 49% 20px 0
      .top-line
        hr
          float none
          margin 0 auto
      h2
        font-size 60px
    &__fl-img
      width 80%
      bottom initial
      right initial
      top -20px
      left 50%
      margin-left -40%
    &__fl-text
      width calc(80% - 40px)
      position static
      margin 2em auto
      p
        text-align center

html:lang(zh-CN)
  .c-about
    &__text
      margin-left 5%
      min-height 300px
      h2
        font-weight bold
        font-size 60px
        font-family $font-zh
        line-height 1em
      p
        font-family $font-zh
    &__fl-text
      width calc(50% - 20px)
      left 40%

@media $medium
  html:lang(zh-CN)
    .c-about
      &__text
        h2
          font-family $font-zh
          font-size 56px
        p
          font-family $font-zh
      &__fl-text
        width calc(50% - 40px)
@media $small
  html:lang(zh-CN)
    .c-about
      &__text
        margin-left 0
        min-height initial
        h2
          font-size 40px
          font-family $font-zh
        p
          font-family $font-zh
      &__fl-text
        width calc(80% - 40px)
        
