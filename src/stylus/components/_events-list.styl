      height 45px
      top -55px
      background-color $col-gold
      span
        color black
        top 10px
        font-size 24px 
    .owl
      &-prev
        top 24vw
        left 0
        &:before
          top 17px
          left 0px
          color black
      &-next
        top 24vw
        right 0
        &:before
          top 17px
          left 0px
          color black
        
      &-theme
        .owl-controls
          .owl-buttons
            div
              background-color $col-gold
              width 50px
              height 50px

