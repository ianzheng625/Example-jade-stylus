/**
 * Content:
 * `.c-content` - Main container 
 * 
 *     @example
 *     div.c-content
 *      div.c-content__bar
 *       h1 Title
 *      div.c-content__screen
 */
 
$bar = '&__bar'
.c-content
  width 100%
  text-align center
  {$bar}
    padding ($site-padding - 10) 0
    min-height 60px
    background-color white
    color black
  &__details
    width 70%
    margin auto
    color white
  &__item
    inline-block(top)
    margin $site-padding
    +tablet()
      width 100%
      margin $site-padding 0
    h1 
      font-size 30px
      margin-bottom $site-padding - 10
    p 
      line-height 20px
    a 
      color white
      text-decoration none
      &:hover
        text-decoration underline
    li 
      padding 5px 0
  &__right
    width calc(100% - 125px)
    margin-left 125px
@media $small
  .c-content
    &__right
      width 100%
      margin-left 0